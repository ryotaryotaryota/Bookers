<%= stylesheet_link_tag 'show', :media => "all" %>
<div class="info"> 
    <div class="title">
        <% if current_user.id == @user.id %>
            <h1>マイページ</h1>
        <% else %>
            <h1><%= @user.name %>さんのページ</h1>
        <% end %>

    </div>
    <div class="center">
        <div class="left">
            <p><%= image_tag @user.image_url, size:"300×240" %></p>
        </div>
        <table class="right">
            <tr><td><h2>名前</td><td><%= @user.name %></h2></td></tr>
            <tr><td><h2>学部</td><td><%= @user.faculty %></h2></td></tr>
            <tr><td><h2>学年</td><td><%= @user.grade %>年生</h2></td></tr>
            <tr><td><h2>自己紹介</td><td><%= @user.profile %></h2></td></tr>
        </table>
    </div>
    <div class="button">
        <% if current_user.id == @user.id %>
            <%= link_to "編集する", edit_user_registration_path %>
        <% else %>
            <% if @isRoom == true %>
                <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary btn-lg">チャットへ</a>
            <% else %>
                <%= form_for @room do |f| %>
                    <%= fields_for @entry do |e| %>
                        <%= e.hidden_field :user_id, value: @user.id %>
                    <% end %>
                    <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat"%>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>  
<div class="bottom">
    <p><h1><%= @user.name %> さんが出品した書籍</h1></p>                   
    <div class="books-container">
        <% @user.books.each do |t| %>
            <div class="book">
                <div class="book-photo">
                    <%=image_tag t.image_url, size:"200×250" if t.image? %>
                    <p>￥<%= t.price %></p>
                </div>
                <table class="book-info">
                    <tr><td>題名</td><td>『<%= t.title %>』</td></tr>
                    <tr><td>授業</td><td><%= t.classroom %></td></tr>
                </table>
                <%= link_to "詳細へ", book_path(t.id) %>
                <% if user_signed_in? && current_user.id == t.user_id %>
                    <%= link_to "編集する", edit_book_path(t.id) %>
                    <%= link_to "削除する", book_path(t.id), method: :delete %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>               

    