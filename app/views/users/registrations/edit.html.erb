<%= stylesheet_link_tag 'registrations', :media => "all" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="edit">
    <h1><%= resource_name.to_s.humanize %>情報の編集</h1>
    <div class="field">
      <%= f.label :プロフィール画像 %><br />
      <%= f.file_field :image %>
    </div>
    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="field">
      <%= f.label :学部 %><br />
      <%= f.text_field :faculty, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :学年 %><br />
      <%= f.number_field :grade, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :自己紹介 %><br />
      <%= f.text_area :profile, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :大学用メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field">
      <%= f.label :従来のパスワード %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <div class="field">
      <%= f.label :パスワード %> <i>(空白にしないでください！)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %>文字以上</em>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :確認のため、パスワードをもう一度お願いします。 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions">
      <%= f.submit "更新する" %>
    </div>
<% end %>
  <p><%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当にアカウントを削除しますか？" }, method: :delete %></p>
  </div>
